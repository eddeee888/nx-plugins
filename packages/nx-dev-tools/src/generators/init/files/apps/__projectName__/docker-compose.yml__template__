version: '3.7'

services:
  <%= projectName -%>:
    image: <%= projectName %>/dev:latest
    command: nx serve <%= projectName %> --port=${MAIN_SERVICE_PORT}
    volumes:
      - .:/usr/src/app/
      - /usr/src/app/node_modules

  <%= projectName -%>-db:
    image: mysql:8.0
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
      - MYSQL_PORT=${MYSQL_PORT}
    volumes:
      - <%= projectName -%>-db-data:/var/lib/mysql
    expose:
      - ${MYSQL_PORT}
    ports:
      - ${MYSQL_PORT}:${MYSQL_PORT}

volumes:
  <%= projectName -%>-db-data:
